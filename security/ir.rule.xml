<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Regla para que el usuario portal solo vea sus propias notas -->
        <record id="rule_grade_portal" model="ir.rule">
            <field name="name">Portal User Own Grades</field>
            <field name="model_id" ref="model_university_grade"/>
            <field name="domain_force">[('student_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Regla para que el usuario portal vea su estudiante -->
        <record id="rule_student_portal" model="ir.rule">
            <field name="name">Portal User Own Student Profile</field>
            <field name="model_id" ref="model_university_student"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Regla para que el usuario portal vea sus propias inscripciones -->
        <record id="rule_enrollment_portal" model="ir.rule">
            <field name="name">Portal User Own Enrollments</field>
            <field name="model_id" ref="model_university_enrollment"/>
            <field name="domain_force">[('student_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Regla para que el usuario portal vea las asignaturas en las que está inscrito -->
        <record id="rule_subject_portal" model="ir.rule">
            <field name="name">Portal User Own Subjects</field>
            <field name="model_id" ref="model_university_subject"/>
            <field name="domain_force">[('enrollment_ids.student_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Reglas Multi-compañía para Usuarios Internos -->
        <record id="rule_university_company" model="ir.rule">
            <field name="name">University Multi-Company</field>
            <field name="model_id" ref="model_university_university"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rule_department_company" model="ir.rule">
            <field name="name">Department Multi-Company</field>
            <field name="model_id" ref="model_university_department"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rule_professor_company" model="ir.rule">
            <field name="name">Professor Multi-Company</field>
            <field name="model_id" ref="model_university_professor"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rule_student_company" model="ir.rule">
            <field name="name">Student Multi-Company</field>
            <field name="model_id" ref="model_university_student"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rule_subject_company" model="ir.rule">
            <field name="name">Subject Multi-Company</field>
            <field name="model_id" ref="model_university_subject"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rule_enrollment_company" model="ir.rule">
            <field name="name">Enrollment Multi-Company</field>
            <field name="model_id" ref="model_university_enrollment"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rule_grade_company" model="ir.rule">
            <field name="name">Grade Multi-Company</field>
            <field name="model_id" ref="model_university_grade"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rule_report_company" model="ir.rule">
            <field name="name">University Report Company Rule</field>
            <field name="model_id" ref="model_university_report"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>
