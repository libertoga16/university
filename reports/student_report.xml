<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_student" model="ir.actions.report">
        <field name="name">Informe Académico</field>
        <field name="model">university.student</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">university.report_student_template</field>
        <field name="report_file">university.report_student_template</field>
        <field name="print_report_name">'Academic Report - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_university_student"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_student_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center mt-4">Informe Académico</h2>
                        
                        <div class="row mt-4 mb-4" style="border: 1px solid #ccc; padding: 15px;">
                            <div class="col-6">
                                <strong>Alumno:</strong> <span t-field="o.name"/><br/>
                                <strong>Dirección:</strong><br/>
                                <span t-field="o.street"/><br/>
                                <span t-field="o.city"/>, <span t-field="o.zip_code"/>
                            </div>
                            <div class="col-6 text-end">
                                <strong>Universidad:</strong> <span t-field="o.university_id.name"/><br/>
                                <t t-if="o.university_id.image_1920">
                                    <img t-att-src="image_data_uri(o.university_id.image_1920)" style="max-height: 80px;"/>
                                </t>
                            </div>
                        </div>

                        <h4>Resumen por Asignatura</h4>
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Asignatura</th>
                                    <th>Profesor</th>
                                    <th class="text-end">Nota Media</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.get_subject_summary()" t-as="summary">
                                    <td><span t-out="summary['subject']"/></td>
                                    <td><span t-out="summary['professor']"/></td>
                                    <td class="text-end"><span t-out="summary['average']" t-options='{"widget": "float", "precision": 2}'/></td>
                                </tr>
                            </tbody>
                        </table>

                        <h4 class="mt-5">Historial Completo</h4>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Asignatura</th>
                                    <th>Profesor</th>
                                    <th class="text-end">Nota</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.grade_ids" t-as="grade">
                                    <td><span t-field="grade.date"/></td>
                                    <td><span t-field="grade.enrollment_id.subject_id.name"/></td>
                                    <td><span t-field="grade.enrollment_id.professor_id.name"/></td>
                                    <td class="text-end"><span t-field="grade.score"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>