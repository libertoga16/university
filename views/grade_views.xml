<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_grade_form" model="ir.ui.view">
        <field name="name">university.grade.form</field>
        <field name="model">university.grade</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="enrollment_id"/>
                            <field name="student_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="score"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_grade_tree" model="ir.ui.view">
        <field name="name">university.grade.tree</field>
        <field name="model">university.grade</field>
        <field name="arch" type="xml">
            <list editable="bottom" decoration-danger="score &lt; 5" decoration-success="score &gt;= 5">
                <field name="enrollment_id"/>
                <field name="student_id"/>
                <field name="score"/>
            </list>
        </field>
    </record>

    <record id="view_grade_kanban" model="ir.ui.view">
        <field name="name">university.grade.kanban</field>
        <field name="model">university.grade</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title">
                                    <field name="enrollment_id"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><field name="student_id"/></div>
                                <div><field name="score"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
                
            </kanban>
        </field>
    </record>

    <record id="view_grade_search" model="ir.ui.view">
        <field name="name">university.grade.search</field>
        <field name="model">university.grade</field>
        <field name="arch" type="xml">
            <search>
                <field name="enrollment_id"/>
                <field name="student_id"/>
            </search>
        </field>
    </record>

    <record id="action_university_grade" model="ir.actions.act_window">
        <field name="name">Grades</field>
        <field name="res_model">university.grade</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>
