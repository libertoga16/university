<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEW -->
    <record id="university_department_view_form" model="ir.ui.view">
        <field name="name">university.department.view.form</field>
        <field name="model">university.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                         <button name="action_view_professors" type="object" class="oe_stat_button" icon="fa-user-tie">
                            <field name="professor_count" widget="statinfo" string="Professors"/>
                        </button>
                    </div>
                    <group>
                        <group name="main_info">
                            <field name="name"/>
                            <field name="university_id"/>
                        </group>
                        <group name="structure">
                            <field name="manager_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Professors" name="professors">
                            <field name="professor_ids" mode="kanban">
                                <kanban>
                                    <field name="id"/>
                                    <field name="image_128"/>
                                    <templates>
                                        <t t-name="card">
                                            <div class="oe_kanban_global_click d-flex align-items-center">
                                                <div class="o_kanban_image me-3">
                                                    <field name="image_128" widget="image" class="o_image_64_max rounded shadow-sm"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <strong class="o_kanban_record_title">
                                                        <field name="name"/>
                                                    </strong>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST VIEW -->
    <record id="university_department_view_list" model="ir.ui.view">
        <field name="name">university.department.view.list</field>
        <field name="model">university.department</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="university_id"/>
                <field name="manager_id"/>
            </list>
        </field>
    </record>

    <!-- KANBAN VIEW -->
    <record id="university_department_view_kanban" model="ir.ui.view">
        <field name="name">university.department.view.kanban</field>
        <field name="model">university.department</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="university_id"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="university_id"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="university_department_view_search" model="ir.ui.view">
        <field name="name">university.department.view.search</field>
        <field name="model">university.department</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="university_id"/>
                <filter string="University" name="group_university" context="{'group_by':'university_id'}"/>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_university_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">university.department</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>
