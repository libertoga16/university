<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_uni_list" name="Universities">
        <t t-call="website.layout">
            <div class="container mt-5 mb-5">
                <h1 class="text-center mb-5 display-4">Nuestras Universidades</h1>
                <div class="row">
                    <t t-foreach="universities" t-as="uni">
                        <div class="col-lg-4 col-md-6 mb-4">
                            <a t-attf-href="/universidad/#{uni.id}" class="text-decoration-none text-reset">
                                <div class="card h-100 shadow-sm border-0 transition-hover">
                                    <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 250px; overflow: hidden;">
                                        <img t-if="uni.image_1920" 
                                             t-att-src="image_data_uri(uni.image_1920)" 
                                             class="img-fluid" 
                                             style="max-height: 100%; max-width: 100%; object-fit: contain;" 
                                             alt="University Image"/>
                                        <i t-else="" class="fa fa-university fa-5x text-muted"/>
                                    </div>
                                    <div class="card-body text-center">
                                        <h3 class="card-title font-weight-bold" t-field="uni.name"/>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="website_prof_list" name="Professors">
        <t t-call="website.layout">
            <div class="container mt-5 mb-5">
                <div class="d-flex justify-content-between align-items-center mb-5">
                    <a href="/universidad" class="btn btn-outline-secondary"><i class="fa fa-arrow-left"/> Volver</a>
                    <h2 class="mb-0">Profesores de <span t-field="university.name"/></h2>
                </div>
                
                <div class="row">
                    <t t-foreach="professors" t-as="prof">
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-img-top d-flex align-items-center justify-content-center bg-white pt-4 pb-2">
                                    <img t-if="prof.image_128" 
                                         t-att-src="image_data_uri(prof.image_128)" 
                                         class="rounded-circle shadow-sm" 
                                         style="width: 120px; height: 120px; object-fit: cover;"
                                         alt="Professor Image"/>
                                    <div t-else="" class="rounded-circle bg-light d-flex align-items-center justify-content-center shadow-sm" style="width: 120px; height: 120px;">
                                        <i class="fa fa-user fa-3x text-muted"/>
                                    </div>
                                </div>
                                <div class="card-body text-center">
                                    <h5 class="card-title font-weight-bold mb-1" t-field="prof.name"/>
                                    <p class="text-muted small mb-0" t-if="prof.email">
                                        <i class="fa fa-envelope"/> <span t-field="prof.email"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
                
                <div t-if="not professors" class="alert alert-info text-center mt-4">
                    <i class="fa fa-info-circle"/> No hay profesores registrados en esta universidad actualmente.
                </div>
            </div>
        </t>
    </template>
</odoo>