<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEW -->
    <record id="university_subject_view_form" model="ir.ui.view">
        <field name="name">university.subject.view.form</field>
        <field name="model">university.subject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                         <button name="%(action_university_enrollment)d" type="action" class="oe_stat_button" icon="fa-pencil-square-o" context="{'default_subject_id': id, 'search_default_subject_id': id}">
                            <field name="enrollment_count" widget="statinfo" string="Enrollments"/>
                        </button>
                    </div>
                    <group>
                        <group name="main_info">
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group name="org_info">
                            <field name="department_id"/>
                            <field name="university_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Professors" name="professors">
                            <field name="professor_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST VIEW -->
    <record id="university_subject_view_list" model="ir.ui.view">
        <field name="name">university.subject.view.list</field>
        <field name="model">university.subject</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="university_id"/>
            </list>
        </field>
    </record>

    <!-- KANBAN VIEW -->
    <record id="university_subject_view_kanban" model="ir.ui.view">
        <field name="name">university.subject.view.kanban</field>
        <field name="model">university.subject</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="university_id"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="university_id"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

     <!-- SEARCH VIEW -->
     <record id="university_subject_view_search" model="ir.ui.view">
        <field name="name">university.subject.view.search</field>
        <field name="model">university.subject</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="department_id"/>
                <field name="university_id"/>
                <filter string="University" name="group_university" context="{'group_by':'university_id'}"/>
                <filter string="Department" name="group_department" context="{'group_by':'department_id'}"/>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_university_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">university.subject</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>
