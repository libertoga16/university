<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_enrollment_form" model="ir.ui.view">
        <field name="name">university.enrollment.form</field>
        <field name="model">university.enrollment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="code" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="subject_id"/>
                        </group>
                        <group>
                            <field name="university_id"/>
                            <field name="professor_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Grades">
                            <field name="grade_ids">
                                <list editable="bottom">
                                    <field name="score"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_enrollment_tree" model="ir.ui.view">
        <field name="name">university.enrollment.tree</field>
        <field name="model">university.enrollment</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="university_id"/>
            </list>
        </field>
    </record>
    
    <record id="view_enrollment_kanban" model="ir.ui.view">
        <field name="name">university.enrollment.kanban</field>
        <field name="model">university.enrollment</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="code"/>
                
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title">
                                    <field name="code"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><field name="student_id"/></div>
                                <div><field name="subject_id"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
                
            </kanban>
        </field>
    </record>

     <record id="view_enrollment_search" model="ir.ui.view">
        <field name="name">university.enrollment.search</field>
        <field name="model">university.enrollment</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="student_id"/>
                <field name="university_id"/>
            </search>
        </field>
    </record>

    <record id="action_university_enrollment" model="ir.actions.act_window">
        <field name="name">Enrollments</field>
        <field name="res_model">university.enrollment</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>
