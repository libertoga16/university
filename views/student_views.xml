<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEW -->
    <record id="university_student_view_form" model="ir.ui.view">
        <field name="name">university.student.view.form</field>
        <field name="model">university.student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send_email" string="Send by Email" type="object" class="oe_highlight"/>
                    <button name="%(action_university_report)d" string="Print Report" type="action"/>
                </header>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    <div class="oe_button_box" name="button_box">
                         <button name="%(action_university_enrollment)d" type="action" class="oe_stat_button" icon="fa-pencil-square-o" context="{'default_student_id': id, 'search_default_student_id': id}">
                            <field name="enrollment_count" widget="statinfo" string="Enrollments"/>
                        </button>
                         <button name="%(action_university_grade)d" type="action" class="oe_stat_button" icon="fa-list-ol" context="{'default_student_id': id, 'search_default_student_id': id}">
                            <field name="grade_count" widget="statinfo" string="Grades"/>
                        </button>
                    </div>
                    <group>
                        <group name="personal_info">
                            <field name="name"/>
                            <field name="email" widget="email"/>
                        </group>
                        <group name="academic_info">
                            <field name="university_id"/>
                            <field name="tutor_id"/>
                        </group>
                        <group name="address_info">
                             <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True}"/>
                                <field name="zip_code" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': True, 'no_create': True}"/>
                            </div>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- LIST VIEW -->
    <record id="university_student_view_list" model="ir.ui.view">
        <field name="name">university.student.view.list</field>
        <field name="model">university.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="university_id"/>
                <field name="city"/>
            </list>
        </field>
    </record>

     <!-- KANBAN VIEW -->
     <record id="university_student_view_kanban" model="ir.ui.view">
        <field name="name">university.student.view.kanban</field>
        <field name="model">university.student</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click d-flex align-items-center">
                            <div class="o_kanban_image me-3">
                                <field name="image_128" widget="image" class="o_image_64_max rounded shadow-sm"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted">
                                    <field name="university_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- SEARCH VIEW -->
    <record id="university_student_view_search" model="ir.ui.view">
        <field name="name">university.student.view.search</field>
        <field name="model">university.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="university_id"/>
                <filter string="University" name="group_university" context="{'group_by':'university_id'}"/>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_university_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">university.student</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>
