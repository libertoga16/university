<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_professor_form" model="ir.ui.view">
        <field name="name">university.professor.form</field>
        <field name="model">university.professor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    <div class="oe_button_box" name="button_box">
                         <button name="%(university.action_university_enrollment)d" type="action" class="oe_stat_button" icon="fa-pencil-square-o" context="{'default_professor_id': id, 'search_default_professor_id': id}">
                            <field name="enrollment_count" widget="statinfo" string="Enrollments"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="university_id"/>
                        </group>
                        <group>
                            <field name="department_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Subjects">
                            <field name="subject_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_professor_tree" model="ir.ui.view">
        <field name="name">university.professor.tree</field>
        <field name="model">university.professor</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="university_id"/>
                <field name="department_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_professor_kanban" model="ir.ui.view">
        <field name="name">university.professor.kanban</field>
        <field name="model">university.professor</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click d-flex align-items-center">
                            <div class="o_kanban_image me-3">
                                <field name="image_128" widget="image" class="o_image_64_max rounded shadow-sm"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted">
                                    <field name="department_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record id="view_professor_search" model="ir.ui.view">
        <field name="name">university.professor.search</field>
        <field name="model">university.professor</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="university_id"/>
                <field name="department_ids"/>
            </search>
        </field>
    </record>

    <record id="action_university_professor_main" model="ir.actions.act_window">
        <field name="name">Professors</field>
        <field name="res_model">university.professor</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>
